<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://struts.apache.org/dtds/struts-config_1_3.dtd">


<struts-config>


    <form-beans>
        <form-bean name="personForm" type="smartPMS.form.PersonForm"/>
        <form-bean name="klausurForm" type="smartPMS.form.KlausurForm"/>
    </form-beans>

    <action-mappings>

        <action path="/PersonAnlegen"
                type="smartPMS.action.person.PersonAnlegen" name="personForm" validate="true"
                input="/person/anlegen.jsp">
            <forward name="success" path="/PersonListeAnzeigen.do"/>
            <forward name="failure" path="/person/anlegen.jsp"/>
        </action>

        

    </action-mappings>

</struts-config>